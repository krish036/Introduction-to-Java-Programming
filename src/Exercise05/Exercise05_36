package Exercise05;
/*(Geometry: area of a regular polygon) A regular polygon is an n-sided polygon in
which all sides are of the same length and all angles have the same degree (i.e., the
polygon is both equilateral and equiangular). The formula for computing the areaof a regular polygon is*/

//done by D21CS109 KRISH PANDYA
import java.util.Scanner;
public class Exercise05_36{
public static void main(String[] args) {
    //taking input
    Scanner input = new Scanner(System.in);
    System.out.print("Enter the number of sides: ");
    int numberOfSides = input.nextInt();
    System.out.print("Enter the side: ");
    double side = input.nextDouble();
    input.close();
     //calling value
    System.out.println("The area of the pentagon is " + area(numberOfSides, side));

}
//storing value
public static double area(int n, double side) {
    return (n * side * side) / (4 * Math.tan(Math.PI / n));
}
}
